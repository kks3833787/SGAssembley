
{
  "extends": "standard",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["vue"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "_" }],
    "no-multiple-empty-lines": ["error", {"max": 2}],
    "space-before-function-paren": 0,
    "semi": ["error", "always"],
    "no-throw-literal": 0
  }
}
